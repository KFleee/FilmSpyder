.titleContainer {
  background-color: #096dd9;
  height: 400rpx;
  width: inherit;
}

.searchContainer {
  width: inherit;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: space-around */
}

.search {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 70%;
  height: 60rpx;
  background-color: whitesmoke;
  margin-top: 20rpx;
  border: 1rpx solid whitesmoke;
  border-radius: 5rpx;
  margin-left: 20rpx;
}

/* 模式切换按钮 */

.switchMode {
  width: 40rpx;
  height: 40rpx;
  padding-right: 20rpx;
  margin-left: 60rpx;
  margin-top: 10rpx;
}

/* 搜索框提示文字样式 */

.search input {
  font-size: 27rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left: 30rpx;
}

/* 搜索框小图标 */

.search image {
  width: 40rpx;
  height: 40rpx;
  padding-right: 20rpx;
}

.swiper {
  position: absolute;
  top: 100rpx;
  width: 100%;
  height: 330rpx;
  border-radius: 10px;
  display: flex;
}

.swiperItem {
  width: inherit;
  height: inherit;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

/* 四个按钮的容器 */

.buttonContainer {
  top: 430rpx;
  height: 113rpx;
  width: inherit;
  display: flex;
  flex-direction: row;
  padding-top: 5%;
  margin: 10rpx;
  margin-bottom: 10rpx;
  justify-content: space-around;
}

.buttonCircle1 {
  height: 100%;
  background-color: #096dd9;
  width: 15%;
  border-radius: 50%;
  display: flex;
  justify-content: center;
}

