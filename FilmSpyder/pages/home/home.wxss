/* 热门电影 */

.hot {
  position: relative;
  width: 60%;
  height: 50%;
  align-self: center;
}

/* 电影排行 */

.rank {
  position: relative;
  width: 65%;
  height: 55%;
  align-self: center;
}

/* 关注演员 */

.subscribe {
  position: relative;
  width: 50%;
  height: 50%;
  align-self: center;
}

/* 电影收藏 */

.collection {
  position: relative;
  width: 50%;
  height: 40%;
  align-self: center;
}

/* 按钮标签 */

.tagContainer {
  width: inherit;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.tagHot {
  font-size: 35rpx;
}

.tagRank {
  font-size: 35rpx;
}

.tagSub {
  font-size: 35rpx;
}

.tagCollect {
  font-size: 35rpx;
}

.divider {
  width: inherit;
  height: 1rpx;
  background-color: #fff0f0f2;
  margin-top: 20rpx;
}

/* 正在热映 */

.onAirTextContainer {
  display: flex;
  height: inherit;
  width: inherit;
  flex-direction: row;
  margin-top: 20rpx;
}

.textOnAir {
  position: absolute;
  font-size: 35rpx;
  font-weight: bold;
  margin-left: 40rpx;
}

.more {
  position: absolute;
  margin-left: 650rpx;
  font-size: 35rpx;
  color: #125cb8;
  font-weight: bold;
}

/* 热映电影列表容器 */

.onAirListContainer {
  margin-top: 100rpx;
  width: 100%;
}

/* 热映电影列表 */

.scrollView {
  padding: 20rpx;
  width: 100%;
  display: flex;
  white-space: nowrap;
}

/* item容器 */

.itemBox {
  /* width: 100rpx; */
  display: inline-block;
}

/* 封面 */

.thumb {
  height: 380rpx;
  border-radius: 15rpx;
  margin-right: 20rpx;
  width: 250rpx;
}

/* 电影信息 */

.itemInfo {
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
}

/* 电影名 */

.name {
  font-size: 20rpx;
  font-weight: bold;
}

/* 电影评分 */

.score {
  font-size: 20rpx;
}

/* 隐藏滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
