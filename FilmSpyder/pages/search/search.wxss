.titleContainer {
  width: inherit;
  display: flex;
  flex-direction: row;
  align-items: center;
}

/* 模式切换按钮 */

.switchMode {
  width: 40rpx;
  height: 40rpx;
  padding-right: 20rpx;
  margin-left: 60rpx;
  margin-top: 10rpx;
}

.search {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 70%;
  height: 60rpx;
  background-color: whitesmoke;
  margin-top: 20rpx;
  border: 1rpx solid whitesmoke;
  border-radius: 5rpx;
  margin-left: 20rpx;
}

/* 搜索框提示文字样式 */

.search input {
  font-size: 27rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left: 30rpx;
}

/* 搜索框小图标 */

.search image {
  width: 40rpx;
  height: 40rpx;
  padding-right: 20rpx;
}

.divider {
  width: inherit;
  height: 1rpx;
  background-color: #fff0f0f2;
  margin-top: 20rpx;
}


/* -------------电影列表---------------- */

.filmList {
  margin-top: 20rpx;
}

/* ----item布局----- */

.itemBox {
  /* position: relative; */
  width: inherit;
  height: 400rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.thumbContainer {
  width: 35%;
  height: inherit;
  display: flex;
  justify-content: center;
  align-items: center;
}

.thumb {
  width: 220rpx;
  height: 340rpx;
  border-radius: 15rpx;
  /* margin-left: 30rpx; */
}

/* -----电影信息------ */

.itemInfo {
  position: relative;
  width: 45%;
  height: inherit;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 30rpx;
}

.score {
  font-size: 25rpx;
  color: #9b9b9b;
  margin-top: 10rpx;
}

.others {
  font-size: 25rpx;
  color: #9b9b9b;
  margin-top: 30rpx;
}

/* ----详情按钮----- */

.buttonContainer {
  width: 20%;
  height: inherit;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.detailButton {
  width: 80rpx;
  background-color: white;
  border-color: #096dd9;
  color: #096dd9;
  font-size: 25rpx;
  border-width: 0.5rpx;
  border-style: solid;
  padding: 10rpx;
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

/* 搜索结果为空 */
.emptyHint{
  width: inherit;
  height: 400px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}