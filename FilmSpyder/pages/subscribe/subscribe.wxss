
/* -------------电影列表---------------- */

.actorList {
  margin-top: 20rpx;
}

/* ----item布局----- */

.itemBox {
  /* position: relative; */
  width: inherit;
  height: 250rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
/* 演员头像容器 */
.avatarContainer {
  width: 35%;
  height: inherit;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 头像 */
.avatar {
  width: 220rpx;
  height: 90%;
  border-radius: 15rpx;
  /* margin-left: 30rpx; */
}

/* -----电影信息------ */

.itemInfo {
  position: relative;
  width: 45%;
  height: inherit;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 30rpx;
}

.feature {
  font-size: 25rpx;
  color: #9b9b9b;
  margin-top: 10rpx;
}

.recent {
  font-size: 25rpx;
  color: #9b9b9b;
  margin-top: 30rpx;
}

/* ----详情按钮----- */

.buttonContainer {
  width: 20%;
  height: inherit;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.detailButton {
  width: 80rpx;
  background-color: white;
  border-color: #096dd9;
  color: #096dd9;
  font-size: 25rpx;
  border-width: 0.5rpx;
  border-style: solid;
  padding: 10rpx;
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
