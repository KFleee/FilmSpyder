.stock {
  position: absolute;
  width: 40%;
  height: 30%;
  top: 15%;
  left: 5%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #8cc0cf;
  border-radius: 30rpx;
  overflow: hidden;
}

.trend {
  width: 40%;
  height: 30%;
  position: absolute;
  right: 5%;
  top: 15%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #8cc0cf;
  border-radius: 30rpx;
}

.cover {
  height: 100%;
  width: 100%;
  position: absolute;
  z-index: 10;
  border-radius: 30rpx;
  filter: blur(2rpx);
  -webkit-filter: blur(2rpx);
  transform: scale(2);
}

.text {
  position: absolute;
  z-index: 20;
  color: white;
  font-weight: bold;
}

.shadow {
  /* width: 100%; *//* height: 100%; */
  position: absolute;
  background-color: #8cc0cf;
  opacity: 0.6;
  z-index: 15;
}

.top {
  position: absolute;
  width: 40%;
  height: 30%;
  bottom: 15%;
  left: 5%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #8cc0cf;
  border-radius: 30rpx;
}

